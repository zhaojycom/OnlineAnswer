<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.zhaojy.onlineanswer.ui.RoundImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/questionSortItemIconHw"
        android:layout_height="@dimen/questionSortItemIconHw"
        android:src="@mipmap/icon"
        app:xhradius="@dimen/questionSortItemIconRadius"
        app:xhtype="fillet" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/questionSortItemMT"
        android:textSize="@dimen/questionSortItemFontS" />

</LinearLayout>
